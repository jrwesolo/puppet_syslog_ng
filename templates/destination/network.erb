<%- if @network -%>
network("<%= @network.split(':', 2).at(0) %>"
<%- else -%>
network("<%= @address %>"
<%- end -%>
<%- unless @flags.nil? -%>
    flags(<%= @flags %>)
<%- end -%>
<%- unless @flush_lines.nil? -%>
    flush-lines(<%= @flush_lines %>)
<%- end -%>
<%- unless @ip_protocol.nil? -%>
    ip-protocol(<%= @ip_protocol %>)
<%- end -%>
<%- unless @localip.nil? -%>
    localip(<%= @localip %>)
<%- end -%>
<%- unless @localport.nil? -%>
    localport(<%= @localport %>)
<%- end -%>
<%- unless @log_fifo_size.nil? -%>
    log-fifo-size(<%= @log_fifo_size %>)
<%- end -%>
<%- if @network && @network.split(':', 2).at(1) -%>
    port(<%= @network.split(':', 2).at(1) %>)
<%- elsif @port -%>
    port(<%= @port %>)
<%- end -%>
<%- unless @suppress.nil? -%>
    suppress(<%= @suppress %>)
<%- end -%>
<%- unless @template.nil? -%>
    template(<%= @template %>)
<%- end -%>
<%- unless @template_escape.nil? -%>
    template-escape(<%= @template_escape ? 'yes' : 'no' %>)
<%- end -%>
<%- unless @time_zone.nil? -%>
    time-zone(<%= @time_zone %>)
<%- end -%>
<%- unless @transport.nil? -%>
    transport(<%= @transport %>)
<%- end -%>
);
