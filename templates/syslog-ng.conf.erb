# This file is Managed by Puppet
# Local changes will be lost!

@version: <%= @config_version %>
@include "scl.conf"
<% if @create_tty10 -%>
@include "tty10.conf"
<% end -%>

options {
    chain_hostnames(<%= @chain_hostnames ? 'yes' : 'no' %>);
    create_dirs(<%= @create_dirs ? 'yes' : 'no' %>);
    dir_group(<%= @dir_group %>);
    dir_owner(<%= @dir_owner %>);
    dir_perm(<%= @dir_perm %>);
    flush_lines(<%= @flush_lines %>);
    group(<%= @group %>);
    keep-hostname(<%= @keep_hostname ? 'yes' : 'no' %>);
    log-fifo-size(<%= @log_fifo_size %>);
    mark_freq(<%= @mark_freq %>);
    owner(<%= @owner %>);
    perm(<%= @perm %>);
    stats_freq(<%= @stats_freq %>);
<%- unless @threaded.nil? -%>
    threaded(<%= @threaded ? 'yes' : 'no' %>);
<%- end -%>
    use_dns(<%= @use_dns ? 'yes' : 'no'  %>);
    use_fqdn(<%= @use_fqdn ? 'yes' : 'no' %>);
};

<%-# Not appending *.conf to this as syslog-ng 3.2.5 had a problem -%>
@include "<%= @conf_d_dir %>/"
